      (cond [(equal? (nucleo-preselector estado) "run-snake") "juego-2" ]
            [(equal? (nucleo-preselector estado) "juego-2") "run-snake" ])
      (nucleo-stopORstart estado)
      (nucleo-vidas estado)
      (nucleo-alive estado)
      (nucleo-snake estado)
      (nucleo-tail estado)
      (nucleo-direccion estado)
