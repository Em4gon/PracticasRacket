      (nucleo-preselector e)                                                               ;
      (nucleo-colorchar estado)                                                            ;
      (nucleo-colorback estado)                                                            ;
      (nucleo-food FOODINICIAL)                                                            ;
      (nucleo-score estado)                                                                ;
      (nucleo-rango estado)                                                             ;
